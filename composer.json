{
    "name": "agentcoop/phpcrystal",
    "description": "An extension of the Laravel PHP framework.",
    "keywords": ["framework", "laravel", "phpcrystal"],
    "license": "MIT",
    "type": "project",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.1.3",
        "doctrine/annotations": "^1.6",
        "fideloper/proxy": "~4.0",
        "jenssegers/mongodb": "^3.4",
        "laravel/framework": "5.6.*",
        "laravel/tinker": "~1.0",
        "symfony/config": "^4.0"
    },
    "require-dev": {
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "~1.0",
        "phpunit/phpunit": "~6.0",
        "symfony/thanks": "^1.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/",
            "App\\Frontoffice\\": "modules/frontoffice/",
            "App\\Backoffice\\": "modules/backoffice/",
            "App\\Api\\": "modules/api/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        },
        "branch-alias": {
            "dev-master": "5.6-dev"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "if [[ ! -f .env ]]; then cp -f .env.example .env; @php artisan key:generate; fi"
        ],
        "post-create-project-cmd": [
            "export NGINX_CONF_DIR=./config/docker/nginx/dev/sites-enabled/; mv -f docker-compose.yml.tpl docker-compose.yml; mv $NGINX_CONF_DIR/app.conf.tpl $NGINX_CONF_DIR/app.conf; sed -i \"s/%project-name%/$(basename $(pwd))/g\" ./docker-compose.yml $NGINX_CONF_DIR/app.conf"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
